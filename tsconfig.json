{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    // dom needed due to msw :(
    "lib": ["dom", "ES2024"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "noEmit": true,
    "rootDirs": [
      "./plugins/",
      "./types/plugins/",
    ],
    "types": [
      "vitest/globals"
    ],
    "target": "ES2022",
  },
  "exclude": [
    "./SquadJS/",
    "./node_modules/",
  ],
}
